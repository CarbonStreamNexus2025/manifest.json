{
  "manifest_version": 3,
  "name": "CarbonStream Nexus",
  "version": "1.0",
  "description": "Sync your internet with the planet. Automatically reduce your digital carbon footprint.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*", "https://*.netflix.com/*", "https://*.twitch.tv/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "alarms"],
  "host_permissions": ["https://api.carbonstream.nexus/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CarbonStream Nexus"
  }
}
